# Prometheus Configuration
# Prometheus server URL. Format: http://hostname:port or http://service.namespace.svc:port
PROMETHEUS_URL=http://prometheus-server.default.svc:9090

# Kubernetes Configuration
# Use in-cluster Kubernetes config (for pods running in cluster). Set to 'true' for production. If 'false', uses kubeconfig file from default location
KUBERNETES_USE_IN_CLUSTER_CONFIG=false

# Target Namespace(s) (Optional)
# Comma-separated list of namespaces to scan. If set, only scans these namespaces. If not set, scans all namespaces (excluding excluded_namespaces)
# Example: TARGET_NAMESPACE=default,production,staging
TARGET_NAMESPACE=

# Excluded Namespaces
# List of Kubernetes namespaces to exclude from analysis. Set as comma-separated values
# Only used when TARGET_NAMESPACE is not set
EXCLUDED_NAMESPACES=kube-system,kube-public,kube-node-lease

# Analysis Configuration
# Number of hours of historical data to analyze. Default: 168 (7 days). Minimum: 1
HOURS=168

# Buffer percentage to add to resource recommendations. Range: 0-100. Default: 20%
BUFFER_PERCENT=20

# Output Configuration
# Output format for recommendations. Possible values: 'yaml', 'table', 'both'. Default: 'both'
OUTPUT_FORMAT=both

# Slack Configuration
# Slack bot token for API-based notifications and file uploads. Required for Slack notifications
SLACK_TOKEN=

# Slack channel ID or name for notifications. Required if using slack_token
SLACK_CHANNEL=

# Slack SSL Verification (Optional)
# Verify SSL certificates for Slack API calls. Set to 'false' to disable SSL verification (not recommended for production)
SLACK_VERIFY_SSL=true

